# Environment Configuration Template
# Phase 3.7.1.1: Project Initialization
# Copy to .env and fill in actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_VERSION=3.7.0
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/predictive_maintenance
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# JWT Authentication
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# File Paths (relative to project root)
GAN_ROOT_PATH=GAN
ML_MODELS_PATH=ml_models
LLM_PATH=LLM

# Celery Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_ACKS_LATE=true
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# Monitoring
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
